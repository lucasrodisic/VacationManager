@model VacationManager.Models.Team

@{
    ViewData["Title"] = "Създай нов екип";
}

<div class="container mt-5">
    <h2 class="section-title text-center text-dark">➕ Създай нов екип</h2>

    <form asp-action="Create" class="bg-white p-4 shadow rounded" style="max-width:600px;margin:auto;">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ProjectId" class="form-label">Проект</label>
            <select asp-for="ProjectId" class="form-select" asp-items="ViewBag.ProjectId"></select>
            <span asp-validation-for="ProjectId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TeamLeadId" class="form-label">Лидер на екипа</label>
            <select asp-for="TeamLeadId" class="form-select" asp-items="ViewBag.TeamLeadId"></select>
            <span asp-validation-for="TeamLeadId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Създай</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Назад</a>
    </form>
</div>
