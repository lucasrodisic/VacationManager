@model VacationManager.Models.Project

@{
    ViewData["Title"] = "Детайли за проект";
}

<div class="container mt-5">
    <h2 class="section-title text-center text-dark">📁 Детайли за проект</h2>

    <div class="bg-white p-4 shadow rounded mx-auto" style="max-width:600px;">
        <dl class="row">
            <dt class="col-sm-4">Име:</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">Описание:</dt>
            <dd class="col-sm-8">@Model.Description</dd>
        </dl>

        <div class="text-center mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Редактирай</a>
            <a asp-action="Index" class="btn btn-secondary ms-2">Назад</a>
        </div>
    </div>
</div>
